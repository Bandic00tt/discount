<div class="container">
    <div class="row">
        {% if cities %}
            {% set total = 0 %}
            <div class="col">
                <ul class="list-group">
                    {% for id, city in cities %}
                        <li class="list-group-item flex-fill select-city-item">
                            <a href="{{ path('app_select_city', {'id': id} ) }}">{{ city.ru }}</a>
                        </li>

                        {% set total = total + 1 %}
                        {% if total % 15 == 0 %}
                                </ul>
                            </div>
                            <div class="col">
                                <ul class="list-group">
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        {% else %}
            <div class="col text-center">
                К сожалению, по вашему запросу ничего не найдено
            </div>
        {% endif %}
    </div>
</div>
