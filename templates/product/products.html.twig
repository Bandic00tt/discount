{% extends 'base.html.twig' %}

{% block body %}
    <h4>Welcome to the products page!</h4>

    <div class="row">
        <div class="col-6">
            <form action="{{ path('products') }}" method="get" class="row">
                <div class="col-8">
                    <div class="input-group">
                        <label for="search-query" class="visually-hidden"></label>
                        <input type="text"
                               name="q"
                               class="form-control"
                               id="search-query"
                               placeholder="Найти продукт"
                               value="{{ app.request.query.get('q') }}"
                        >
                    </div>
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        {% set i = 1 %}
        {% for product in products %}
            <div class="col">
                <div class="discount-wrapper" data-id="{{ product.productId }}">
                    <div class="card" style="width: 15rem;">
                        <img src="{{ product.imgLink }}" class="img-fluid" alt="{{ product.name }}">
                        <div class="card-body" style="min-height: 100px;">
                            {{ product.name }}
                        </div>
                    </div>
                </div>
            </div>

            {% if i % 4 == 0 %}
                </div>
                <div class="row">
            {% endif %}

            {% set i = i + 1 %}
        {% endfor %}
    </div>

{% endblock %}